.titleList{
  display: flex;
  line-height: 50rpx;
  background-color: #87CEFA;
  height: 70rpx
}

.titleListItem{
  display: flex;
  width:108rpx;
  flex-shrink:0;
  flex-direction:column;
  align-items:center;
}

.select{
  color: #f10b2e; 
  border-bottom: 5rpx solid #f10b2e;
}

.news-item{
  display: flex;
  align-items: center;
  height: 150rpx;
  margin: 0 20rpx;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1)
}

.news-wraper-y{
  display: flex;
}

.text{
  flex-grow: 1;
  padding-right: 10rpx; /*距离右侧60rpx*/
  /*text-align: center;*/
  width: 500rpx;
  font-size: 30rpx;
  line-height: 40rpx;
}

.source{
  opacity: 0.5;
  font-size: 25rpx;
  line-height: 35rpx;
  width: 300rpx
}
.time{
  opacity: 0.5;
  font-size: 25rpx;
  line-height: 35rpx;
}


.news-icon{
  padding-left: 10rpx;
  height: 140rpx;
}